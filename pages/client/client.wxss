/* pages/user/user.wxss */
.container{
  padding: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 400rpx;
  background: #2b2b2b;
  font-size: 35rpx;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 100rpx 0 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fdfdfd;
  font-size: 44rpx;
}

/* 列表 */
.person-list{
  width: 100%;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}

.item-text {
  color: gray;
  font-size: 34rpx;
  margin-left: 50rpx;
}

.person-line {
  width: 90%;
  height: 2rpx;
  background: lightgray;
  margin-left: 20rpx;
}
.separate{
  width: 100%;
  height: 2rpx;
}