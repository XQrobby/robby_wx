/* pages/order/order.wxss */
.container{
  display: flex;
  flex-direction: column;
  padding:18rpx 50rpx;
}
.space{
  width: 80rpx;
  height:20rpx;
}
.title{
  text-align: center;
  padding:30rpx 0 30rpx 0;
  color: #FFF;
  background-color: #1B82D1;
}
#icon{
  width: 20%;
  box-sizing: border-box;
  padding-left:30rpx;
}
.icon{
  width: 80rpx;
  height: 80rpx;
}
#roll{
  height:440rpx;
  background: #fff;
}
.rollImg{
  width: 100%;
  height: 400rpx;
}
#user,#fault,#fix,#order{
  width: 100%;
  padding: 25rpx 0;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #696969;
}
.separate{
  width: 100%;
  height: 3rpx;
  background:lightgray;
}
.tel{
  font-size: 30rpx;
  padding-left: 20rpx;
  color:#696969;
}
.text-0{
  font-size:40rpx;
  color:#000000;
  font-weight:bold;
}
.bt{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-bottom: 50rpx;
}
#annul{
  background: lightcoral;
  color: #f0eff5;
  width: 40%;
  border-radius: 2%;
}
.repair{
  width: 80rpx;
  height: 80rpx;
}
#cancel{
  width: 80%;
  background: #F58851;
  color: #f0eff5;
  position: relative;
  margin-left: 10%;
  margin-top: 8%;
  margin-bottom: 8%;
}
#submit{
  width: 80%;
  background: #9ad59b;
  color: #f0eff5;
  position: relative;
  margin-left: 10%;
  margin-top: 8%;
  margin-bottom: 8%;
}